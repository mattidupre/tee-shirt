{
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "types": ["vitest/globals"],
    "baseUrl": "./src",
    "outDir": "./dist",
    "experimentalDecorators": true
  },
  "include": ["./src/**/*"]
}
